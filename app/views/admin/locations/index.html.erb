<div class="row">
  <div class="col-md-12">
    <p id="notice"><%= notice %></p>

    <h1>Locations</h1>

    <table class="table table-sm">
      <thead>
        <tr>
          <th>Name</th>
          <th>Type</th>
          <th>Phone</th>
          <th>Email</th>
          <th>Open</th>
          <th>Visible</th>
          <th>Street</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @locations.each do |location| %>
          <tr>
            <td><%= location.name %></td>
            <td><%= location.business_type %></td>
            <td><%= location.contact_phone %></td>
            <td><%= location.contact_email %></td>
            <td><%= location.open %></td>
            <td><%= location.visible %></td>
            <td><%= location.address_street %></td>
            <td><%= link_to 'Show', [:admin, location] %></td>
            <td><%= link_to 'Edit', edit_admin_location_path(location) %></td>
            <td><%= link_to 'Destroy', [:admin, location], method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Location', new_admin_location_path %>
  </div>
</div>
